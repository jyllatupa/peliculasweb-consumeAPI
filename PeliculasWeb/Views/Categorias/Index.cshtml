@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="container py-5">
    <div class="row align-items-center mb-4">
        <div class="col-12 col-md-8">
            <h2 class="text-primary fw-bold mb-3 mb-md-0">
                <i class="fas fa-list-alt me-2"></i> Lista de Categorías
            </h2>
        </div>
        <div class="col-12 col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
                <i class="fas fa-plus me-2"></i> Crear Nueva Categoría
            </a>
        </div>
    </div>

    <div class="card shadow-sm rounded-4 bg-dark text-light">
        <div class="card-body p-4">
            <div class="table-responsive">
                <table id="tblCategorias" class="table table-dark table-hover table-striped table-bordered align-middle mb-0 rounded-3 overflow-hidden">
                    <thead class="table-secondary text-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Fecha Creación</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Aquí se generarán las filas con DataTables -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/categoria.js"></script>
}
